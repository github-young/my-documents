{
    // ====== Java ======
    "java.errors.incompleteClasspath.severity": "ignore",
    // ====== LaTeX-Workshop ======
    "latex-workshop.message.update.show": false,
    "latex-workshop.latex.autoBuild.run": "never",
    "latex-workshop.view.pdf.viewer": "tab",
    //"latex-workshop.view.pdf.viewer": "external",
    /*"latex-workshop.view.pdf.external.command": {
        "command": "sumatra",
        "args": [
            "%PDF%"
        ]
    },*/
    "latex-workshop.latex.magic.args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-shell-escape",
        "%DOCFILE%"
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "xelatex",
            "tools": [
                "xelatex"
            ]
        },
        {
            "name": "xelatex -> bibtex -> xelatex*2",
            "tools": [
                "xelatex",
                "bibtex",
                "xelatex",
                "xelatex"
            ]
        },
        {
            "name": "xelatex -> biber -> xelatex*2",
            "tools": [
                "xelatex",
                "biber",
                "xelatex",
                "xelatex"
            ]
        }
    ],
    "latex-workshop.latex.tools": [
        {
            "name": "xelatex",
            "command": "xelatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-shell-escape",
                // "-pdf",
                "%DOCFILE%"
            ]
        },
        {
            "name": "bibtex",
            "command": "bibtex",
            "args": [
                "%DOCFILE%"
            ]
        },
        {
            "name": "biber",
            "command": "biber",
            "args": [
                "%DOCFILE%"
            ]
        },
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-shell-escape",
                // "-pdf",
                "%DOCFILE%"
            ]
        }
    ],
    "latex-workshop.latex.clean.fileTypes": [
        "*.acn",
        "*.acr",
        "*.alg",
        "*.aux",
        "*.bbl",
        "*.blg",
        "*.bcf",
        "*.fdb_latexmk",
        "*.fls",
        "*.glg",
        "*.glo",
        "*.gls",
        "*.gz",
        "*.hd",
        "*.idx",
        "*.ind",
        "*.ins",
        "*.ist",
        "*.lof",
        "*.log",
        "*.lot",
        "*.nav",
        "*.out",
        "*.run.xml",
        "*.snm",
        "*.toc"
    ],
    // ====== MATLAB =========================
    // "matlab.mlintpath": "C:\\D\\study\\MATLAB\\R2018b\\bin\\win64",
    "matlab.linterEncoding": "utf8",
    "matlab.lintOnSave": false,
    // ====== Markdown Preview Enhanced ======
    "markdown-preview-enhanced.enableScriptExecution": true,
    "markdown-preview-enhanced.scrollSync": false,
    // ====== Live Server ======
    "liveServer.settings.donotVerifyTags": true,
    "liveServer.settings.donotShowInfoMsg": true,
    // ====== Python ======
    "python.dataScience.sendSelectionToInteractiveWindow": false,
    "python.pythonPath": "C:\\D\\study\\Anaconda\\python.exe",
    "python.linting.enabled": true,
    "python.jediEnabled": false,
    // ====== Remote SSH ======
    "remote.SSH.remotePlatform": {
        "ip.ip.ip.a": "linux",
        "ip.ip.ip.b": "linux"
    },
    // ====== SpellRight ======
    "spellright.configurationScope": "user",
    "spellright.language": [
        "en"
    ],
    "spellright.documentTypes": [
        "markdown",
        "latex",
        "plaintext"
    ],
    // ====== Vim ======
    "vim.overrideCopy": false,
    "vim.useCtrlKeys": false,
    // ====== VSCode ======
    "breadcrumbs.enabled": false,
    "editor.minimap.enabled": true,
    "editor.fontSize": 18,
    "editor.suggestSelection": "first",
    "editor.renderWhitespace": "all",
    "editor.tabSize": 4,
    "editor.detectIndentation": false,
    "editor.renderControlCharacters": false,
    "editor.wordWrap": "on",
    "explorer.confirmDragAndDrop": false,
    "extensions.autoUpdate": true,
    "files.autoSave": "onFocusChange",
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    //"http.proxy": "http://127.0.0.1:12333",
    //"export https_proxy": "http://127.0.0.1:12333",
    "markdown.preview.fontSize": 18,
    "search.smartCase": true,
    "terminal.integrated.shell.windows": "C:\\Windows\\System32\\cmd.exe",
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    "window.zoomLevel": 0,
    //"window.titleBarStyle": "custom",
    "workbench.activityBar.visible": false,
    "workbench.statusBar.visible": true,
    "workbench.enableExperiments": false,
    "update.showReleaseNotes": false,
    "update.enableWindowsBackgroundUpdates": true,
    //"vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "explorer.confirmDelete": false,
    "python.languageServer": "Microsoft",
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    }
}
